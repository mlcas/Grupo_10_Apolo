           <option value="Tres articulos">3</option>
           <option value="Cuatro articulos">4</option>
           <option value="Conco articulos">5</option>
          </select>
        </div>
        
      </article>
    
    </div>
      <article class="third-section">
        <h4 class="title">Resumen de Compra</4>
          <form action="#" method="GET">
            <label for="cupon">Cupon de Descuento:</label>
            <input type="text" name="cupon descuento" id="cupon" placeholder="Codigo" class="control">
          </form>
          <div class="subtotal">
            <p>Subtotal</p>
            <p>$60000</p>
          </div>
          <div class="total">
            <p>Total</p>
            <p>$60000</p>
          </div>
          <button type="submit" class="botton-form-login">Finalizar Compra</button>
          <div>
          <button type="submit" class="keep-buying"><span>Continuar Comprando</span></button>
        </div>
      </article>
   
    </section>
  </main>

  <%- include("../partial/footer.ejs") %> <!--Aca estoy reutilizando codigo gracias a ejs-->
</body>

</html>